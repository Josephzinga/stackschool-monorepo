{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true, // Génère les fichiers .d.ts pour les types
    "declarationMap": true // Génère les fichiers .d.ts.map
  },
  "include": ["src/**/*", "src/index.ts", "src/prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
