{
  "private": true,
  "name": "@stackschool/root",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @stackschool/api run dev",
    "dev:web": "pnpm --filter @stackschool/web run dev",
    "dev:mobile": "pnpm --filter @stackschool/mobile run start",
    "db:generate": "pnpm --filter @stackschool/db run generate"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "eslint": "^9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "esbuild",
      "msgpackr-extract",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
